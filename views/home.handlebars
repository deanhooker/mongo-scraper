<nav class="navbar navbar-dark bg-dark navbar-expand-lg">
    <span class="navbar-brand navbar-nav mb-0 h1">Mongo Scraper</span>
    <div class="collapse navbar-collapse">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home</a>
            <a class="nav-item nav-link active" href="/saved">Saved Articles</a>
        </div>
    </div>
    <div class="navbar-nav">
        <a href="/scrape">
            <button type="button" id="scrape-articles" class="btn btn-primary float-left ml-auto">Scrape New Articles</button>
        </a>
    </div>
</nav>

<header>
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4 text-center text-white">Mongo Scraper</h1>
        <p class="text-center text-white">New York Times Edition</p>
    </div>
</header>

<div class="container">
    <div class="row" id="articles">
        {{#each articles}}
        <div class="card">
            <div class="card-body">
                <a href="/articles/{{id}}">
                    <h4 class="card-title">{{title}}</h4>
                </a>
                <p class="card-text">{{id}}</p>
                <p class="card-text">{{description}}</p>
                <p class="card-text">{{link}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>